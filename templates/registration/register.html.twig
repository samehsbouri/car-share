{# templates/registration/register.html.twig #}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription - CarShare</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Styles globaux */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            margin: 0;
            color: #333;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        /* Gradients */
        .gradient-primary {
            background: linear-gradient(45deg, #4e54c8, #8f94fb);
        }

        /* Cards */
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
            overflow: hidden;
            background: white;
            padding: 2.5rem;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 500px;
            text-align: center;
        }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
        }

        /* Form styling */
        .form-floating > .form-control,
        .form-floating > .form-select {
            height: 60px;
            padding: 1rem 1.25rem;
            border-radius: 30px;
            font-size: 1rem;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }

        .form-floating > .form-control:focus,
        .form-floating > .form-select:focus {
            border-color: #4e54c8;
            box-shadow: 0 0 0 0.25rem rgba(78, 84, 200, 0.15);
        }

        .form-floating > label {
            padding: 1rem 1.25rem;
            color: #6c757d;
        }

        /* Buttons */
        .btn {
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 30px;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .btn-primary {
            background: linear-gradient(45deg, #4e54c8, #8f94fb);
            border: none;
        }

        .btn-secondary {
            background: linear-gradient(45deg, #6c757d, #adb5bd);
            border: none;
        }

        /* Animations */
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            animation: slideIn 0.4s ease-out;
        }

        /* Additional styles */
        .alert {
            padding: 0.75rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
        }

        .alert-danger {
            background: #ffebee;
            color: #c62828;
            border: 1px solid #c62828;
        }

        .icon {
            margin-right: 0.5rem;
            color: #2575fc;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .form-floating > .form-control,
            .form-floating > .form-select {
                height: 55px;
            }
        }
    </style>
</head>
<body>
<!-- Contenu principal -->
<div class="hover-card">
    <h1><i class="fas fa-user-plus icon"></i>Inscription</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
    <div class="form-floating mb-3">
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
        {{ form_label(registrationForm.email, 'Email') }}
    </div>

    <div class="form-floating mb-3">
        {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
        {{ form_label(registrationForm.nom, 'Nom') }}
    </div>

    <div class="form-floating mb-3">
        {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
        {{ form_label(registrationForm.prenom, 'Prénom') }}
    </div>

    <div class="form-floating mb-3">
        {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
        {{ form_label(registrationForm.telephone, 'Téléphone') }}
    </div>

    <div class="form-floating mb-3">
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
    </div>

    <div class="checkbox-group mb-3">
        {{ form_widget(registrationForm.agreeTerms) }}
        {{ form_label(registrationForm.agreeTerms) }}
    </div>

    <button type="submit" class="btn btn-primary w-100 mb-2">
        <i class="fas fa-user-plus icon"></i>S'inscrire
    </button>

    <a href="{{ path('app_home') }}" class="btn btn-secondary w-100">
        <i class="fas fa-times icon"></i>Annuler
    </a>
    {{ form_end(registrationForm) }}
</div>

{# Bootstrap JS CDN #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Card animations
        const cards = document.querySelectorAll('.hover-card');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            setTimeout(() => {
                card.style.transition = 'all 0.4s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100 * index);
        });

        // Form enhancements
        const formControls = document.querySelectorAll('.form-control, .form-select');
        formControls.forEach(control => {
            control.addEventListener('focus', function() {
                this.closest('.form-floating').classList.add('focused');
            });

            control.addEventListener('blur', function() {
                if (!this.value) {
                    this.closest('.form-floating').classList.remove('focused');
                }
            });
        });

        // Alert animations
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            setTimeout(() => {
                alert.classList.add('fade');
                setTimeout(() => alert.remove(), 300);
            }, 5000);
        });
    });
</script>
</body>
</html>