{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0">Changer mon mot de passe</h1>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.currentPassword, {
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.newPassword.first, {
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.newPassword.second, {
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
                            <a href="{{ path('app_profile') }}" class="btn btn-secondary">Retour au profil</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}